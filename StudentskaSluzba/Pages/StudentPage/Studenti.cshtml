@page
@model StudentskaSluzba.Pages.StudentPage.StudentModel

@{
    ViewData["Title"] = "Studenti";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Studenti</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form method="post">
    <input type="text" asp-for="SearchText">
    <input type="submit" value="Search">
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.Student[0].Name)*@
                <a class="btn-outline-dark" asp-page-handler="SortByName">Name</a>
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Student[0].Surname)*@
                <a class="btn-outline-dark" asp-page-handler="SortBySurname">Surname</a>
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Student[0].DateOfBirth)*@
                <a class="btn-outline-dark" asp-page-handler="SortByDateOfBirth">Date of Birth</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Student) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @if (item.Image != null)
                {
                    <img class="block" src="~/Images/@item.Image"  alt="" width="50" height="auto" />
                }
                @*@Html.DisplayFor(modelItem => item.DateOfBirth)*@
             </td>
             <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
