@page
@model StudentskaSluzba.Pages.StudentPage.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Surname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Surname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.DateOfBirth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.DateOfBirth)
        </dd>
        <dt class="col-sm-2">
            @if (Model.Student.Image != null)
            {
                <img class="block" src="~/Images/@Model.Student.Image" alt="" width="500" height="auto" />
            }
        </dt>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Student?.ID">Edit</a> |
    <a asp-page="./Studenti">Back to List</a>
</div>
<br />
<br />
<div>
    <h4>Prijave</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayName("Ispitni rok")
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayName("Ispit")
        </dt>
        <hr />
        @foreach (var item in Model.Student.IspitnePrijave) {
            <tr>
                <dd class="col-sm-2">
                    @Html.DisplayFor(modelItem => item.IspitniRok.Name)
                </dd>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.Ispit.Name)
                </dd>
            </tr>
        }
        <hr />
        <a asp-page="..\PrijavaPage/Create">Create New</a>
    </dl>
</div>