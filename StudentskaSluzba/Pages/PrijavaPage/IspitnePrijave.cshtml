@page
@model StudentskaSluzba.Pages.PrijavaPage.PrijavaModel

@{
    ViewData["Title"] = "Ispitne prijave";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Ispitne prijave</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Prijava[0].Student)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prijava[0].Ispit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prijava[0].IspitniRok)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Prijava) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => (item.Student.Name))
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ispit.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IspitniRok.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
