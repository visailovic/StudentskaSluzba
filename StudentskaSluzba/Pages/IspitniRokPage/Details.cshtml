@page
@model StudentskaSluzba.Pages.IspitniRokPage.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>IspitniRok</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IspitniRok.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IspitniRok.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.IspitniRok?.ID">Edit</a> |
    <a asp-page="./IspitniRokovi">Back to List</a>
    <hr />
</div>
<div>
    <br><br>
    <h4>Prijave</h4>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Prijave[0].Student.Surname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Prijave[0].Student.Surname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Prijave[0].Ispit)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Prijave[0].IspitniRok)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Prijave)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Student.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Student.Surname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ispit.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IspitniRok.Name)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
